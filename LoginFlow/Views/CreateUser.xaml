<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.Views.CreateUser">
    <StackLayout>
        <Entry x:Name="nameEntry" Placeholder="Name" />
        <Entry x:Name="Email" Placeholder="Example@email.com" />
        <Entry x:Name="Password" Placeholder="Password" />
  
        <StackLayout Orientation="Horizontal">
            <Button Text="Register" Clicked="OnRegisterClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>